<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Showing URLs</title>
  </head>
  <body>
    <h1 class="text-3xl font-bold underline">List of shorten urls</h1>
    {{ if .URLS }}
    <ul class="space-y-5 p-5">
        {{ range .URLS }}
        <li>
            <div>
                <a href="//{{ $.Host }}/{{ .SURL }}">
                    {{ $.Host }}/{{ .SURL }}
                </a>
                <p>
                    {{ .URL }}
                </p>
                <form action="/delete" method="post">
                    <input name="id" value="{{ .ID }}" type="hidden">
                    <button class="text-red-700 text-sm cursor-pointer">delete</button>
                </form>
            </div>
        </li>
        {{end}}
    </ul>
    {{ else }}
    <p>the url list is empty</p>
    {{ end }}
    <a href="/">Go home</a>
  </body>
</html>
